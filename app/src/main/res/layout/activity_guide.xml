<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Guide" >


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="275dp"
        android:layout_height="51dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/guide" />

    <ScrollView
        android:layout_width="364dp"
        android:layout_height="444dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.65">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/guide1"
                android:layout_width="match_parent"
                android:layout_height="131dp"
                android:fontFamily="@font/audiowide"
                android:text="Stratbox Mobile is a  strategic game for one or two players. It was made by groups of BS Computer Science students of Adamson University."
                android:textColor="@android:color/holo_orange_light"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="165dp"
                android:fontFamily="@font/audiowide"
                android:text="Let's get started!"
                android:textColor="@android:color/holo_orange_light"
                android:textSize="50sp" />

            <TextView
                android:id="@+id/guide11"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:fontFamily="@font/audiowide"
                android:text="The game starts with an empty grid of dots. "
                android:textColor="@android:color/background_light"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/guide13"
                android:layout_width="match_parent"
                android:layout_height="119dp"
                android:fontFamily="@font/audiowide"
                android:text="Usually two players take turns adding a single horizontal or vertical line between two unjoined adjacent dots."
                android:textColor="@android:color/background_light"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/guide14"
                android:layout_width="match_parent"
                android:layout_height="119dp"
                android:fontFamily="@font/audiowide"
                android:text="A player who completes the fourth side of a 1Ã—1 box earns one point and takes another turn."
                android:textColor="@android:color/background_light"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/guide15"
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:fontFamily="@font/audiowide"
                android:text="The game ends when no more lines can be placed."
                android:textColor="@android:color/background_light"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/guide16"
                android:layout_width="match_parent"
                android:layout_height="93dp"
                android:fontFamily="@font/audiowide"
                android:text="The winner is the player with the most points."
                android:textColor="@android:color/background_light"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/guide18"
                android:layout_width="match_parent"
                android:layout_height="79dp"
                android:fontFamily="@font/audiowide"
                android:text="The board may be of any size grid."
                android:textColor="@android:color/background_light"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/guide19"
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:fontFamily="@font/audiowide"
                android:text="Each player has 30 seconds to make a turn."
                android:textColor="@android:color/background_light"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="165dp"
                android:fontFamily="@font/audiowide"
                android:text="Good luck, player!"
                android:textColor="@android:color/holo_orange_light"
                android:textSize="50sp" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/back"
        android:layout_width="101dp"
        android:layout_height="42dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.049"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/audiowide"
        android:text="WELCOME TO STRATBOX!"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />
</androidx.constraintlayout.widget.ConstraintLayout>